rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public reads for profile images (so they can be displayed on the site)
    // and allow authenticated users to upload only to their own profile folder.
    match /profiles/{userId}/{allPaths=**} {
      // Public read - change to `if request.auth != null` to restrict reads to authenticated users
      allow read: if true;
      // Only the authenticated owner can upload/delete their files
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Deny everything else by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
