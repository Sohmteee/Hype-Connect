{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents the root user document containing core authentication details and role information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The unique identifier for the user, matching the Firebase Auth UID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's primary email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's primary display name."
        },
        "roles": {
          "type": "array",
          "description": "An array of roles assigned to the user.",
          "items": {
            "type": "string",
            "enum": ["hypeman", "spotlight"]
          }
        },
        "defaultProfileId": {
          "type": "string",
          "description": "The ID of the default profile to display for this user."
        }
      },
      "required": ["uid", "email", "displayName", "roles"]
    },
    "Profile": {
      "title": "Profile",
      "description": "Represents a specific user profile, either for a 'hypeman' or a 'spotlight' user.",
      "type": "object",
      "properties": {
        "profileId": {
          "type": "string",
          "description": "The unique identifier for this profile."
        },
        "type": {
          "type": "string",
          "description": "The type of profile.",
          "enum": ["hypeman", "spotlight"]
        },
        "displayName": {
          "type": "string",
          "description": "The display name for this specific profile."
        },
        "publicBio": {
          "type": "string",
          "description": "A public biography for this profile."
        },
        "payoutInfo": {
          "type": "object",
          "description": "Bank or fintech details for payouts (hypeman profile).",
          "properties": {}
        },
        "visibility": {
          "type": "string",
          "description": "The visibility state of the profile.",
          "enum": ["public", "private"]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the profile was created."
        },
        "stats": {
          "type": "object",
          "description": "Performance statistics for the profile.",
          "properties": {
            "hypesReceived": {
              "type": "number"
            },
            "earnings": {
              "type": "number"
            }
          }
        }
      },
      "required": ["profileId", "type", "displayName", "visibility", "createdAt"]
    },
    "HypeMessage": {
      "title": "Hype Message",
      "description": "Represents a hype message sent by a user to an event.",
      "type": "object",
      "properties": {
        "messageId": { "type": "string" },
        "userId": { "type": "string" },
        "profileId": { "type": "string" },
        "eventId": { "type": "string" },
        "message": { "type": "string" },
        "amount": { "type": "number" },
        "timestamp": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["new", "hyped"] }
      },
      "required": ["messageId", "userId", "profileId", "eventId", "message", "amount", "timestamp", "status"]
    },
    "ClubEvent": {
      "title": "Club Event",
      "description": "Represents a live event at a venue.",
      "type": "object",
      "properties": {
        "eventId": { "type": "string" },
        "hypemanProfileId": { "type": "string" },
        "name": { "type": "string" },
        "location": { "type": "string" },
        "isActive": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["eventId", "hypemanProfileId", "name", "isActive", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores the primary user record, including auth info and roles."
    },
    "/users/{userId}/profiles/{profileId}": {
      "schema": { "$ref": "#/entities/Profile" },
      "description": "Stores individual profiles (hypeman or spotlight) for a user."
    },
    "/events/{eventId}": {
        "schema": { "$ref": "#/entities/ClubEvent" },
        "description": "Stores all event documents."
    },
    "/events/{eventId}/hypes/{hypeId}": {
      "schema": { "$ref": "#/entities/HypeMessage" },
      "description": "Stores all hype messages for a specific event."
    }
  }
}