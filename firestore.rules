/**
* Firestore Security Rules for HypeSonovea
* 
* Structure:
* - /users/{userId}: User profile (auth + roles)
* - /users/{userId}/profiles/{profileId}: Hypeman or Spotlight profiles
* - /events/{eventId}: Club events
* - /events/{eventId}/hypes/{hypeId}: Hype messages sent to events
*/

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuth() {
      return request.auth != null;
    }

    function isUser(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    // User Profile - Root document
    match /users/{userId} {
      allow create: if isUser(userId) && 
      request.resource.data.email != null &&
      request.resource.data.displayName != null;

      allow read: if isUser(userId) || isAuth();
      allow update: if isUser(userId);
      allow delete: if false; // Never delete user profiles
    }

    // User Profiles (hypeman/spotlight)
    match /users/{userId}/profiles/{profileId} {
      allow create: if isUser(userId);
      allow read: if isUser(userId) || (resource.data.visibility == 'public') || isAuth();
      allow update: if isUser(userId);
      allow delete: if isUser(userId);
    }

    // Events - Public read, authenticated users can create
    match /events/{eventId} {
      allow create: if isAuth() && request.resource.data.hypemanProfileId != null;
      allow read: if resource.data.isActive == true || isAuth();
      allow update: if isAuth() && resource.data.hypemanProfileId == request.auth.uid;
      allow delete: if false;

      // Hype Messages under events
      match /hypes/{hypeId} {
        allow create: if isAuth() &&
        request.resource.data.userId == request.auth.uid &&
        request.resource.data.eventId == eventId;

        allow read: if true; // Hypes are public

        // Only hypeman or creator can update hype status
        allow update: if isAuth() && 
        (get(/databases/$(database)/documents/events/$(eventId)).data.hypemanProfileId == request.auth.uid ||
        resource.data.userId == request.auth.uid);

        allow delete: if isAuth() && resource.data.userId == request.auth.uid;
      }
    }

    // Leaderboard - Public read
    match /leaderboard/{document=**} {
      allow read: if true;
      allow write: if false; // Write only through Cloud Functions
    }
  }
}
