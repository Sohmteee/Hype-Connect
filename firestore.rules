/**
* Firestore Security Rules for HypeSonovea
* 
* Structure:
* - /users/{userId}: User profile (auth + roles)
* - /users/{userId}/profiles/{profileId}: Hypeman or Spotlight profiles
* - /events/{eventId}: Club events
* - /events/{eventId}/hypes/{hypeId}: Hype messages sent to events
*/

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuth() {
      return request.auth != null;
    }

    function isUser(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    // User Profile - Root document
    match /users/{userId} {
      allow create: if isUser(userId) && 
      request.resource.data.email != null &&
      request.resource.data.displayName != null;

      allow read: if isUser(userId) || isAuth();
      allow update: if isUser(userId);
      allow delete: if false; // Never delete user profiles
    }

    // User Profiles (hypeman/spotlight)
    match /users/{userId}/profiles/{profileId} {
      allow create: if isUser(userId);
      allow read: if isUser(userId) || (resource.data.visibility == 'public') || isAuth();
      allow update: if isUser(userId);
      allow delete: if isUser(userId);
    }

    // Events - Public read (active only for unauthenticated), all for authenticated
    match /events/{eventId} {
      allow create: if isAuth() && request.resource.data.hypemanUserId != null;
      allow read: if (resource.data.isActive == true) || isAuth();
      allow update: if isAuth() && resource.data.hypemanUserId == request.auth.uid;
      allow delete: if false;

      // Hype Messages under events
      match /hypes/{hypeId} {
        allow create: if isAuth() &&
        request.resource.data.userId == request.auth.uid &&
        request.resource.data.eventId == eventId;

        allow read: if true; // Hypes are public

        // Only hypeman or creator can update hype status
        allow update: if isAuth() && 
        (get(/databases/$(database)/documents/events/$(eventId)).data.hypemanUserId == request.auth.uid ||
        resource.data.userId == request.auth.uid);

        allow delete: if isAuth() && resource.data.userId == request.auth.uid;
      }
    }

    // Leaderboard - Public read
    match /leaderboard/{document=**} {
      allow read: if true;
      allow write: if false; // Write only through Cloud Functions
    }

    // Bookings - Users can read their own bookings, hypemen can read bookings for them
    match /bookings/{bookingId} {
      allow create: if isAuth();
      allow read: if isAuth() && 
      (request.auth.uid == resource.data.userId || 
      request.auth.uid == resource.data.hypemanUserId);
      allow update: if isAuth() && request.auth.uid == resource.data.hypemanUserId;
      allow delete: if false;
    }

    // Wallets - Users can read their own wallet, or write operations fail gracefully
    match /wallets/{userId} {
      allow create: if isUser(userId);
      allow read: if isUser(userId) || isAuth();
      allow update: if isUser(userId);
      allow delete: if false;
    }

    // Webhook Logs - Server-only, no client access
    match /webhook-logs/{webhookId} {
      allow read, write: if false;
    }

    // Payment Transactions - User can read their own, but writes are server-only
    match /payment-transactions/{reference} {
      allow create: if false; // Server-only via admin SDK
      allow read: if isAuth() && 
      request.auth.uid == get(/databases/$(database)/documents/payment-transactions/$(reference)).data.userId;
      allow update, delete: if false;
    }

    // Fraud Alerts - Admin only, no client access
    match /fraud-alerts/{alertId} {
      allow read, write: if false;
    }

    // Platform Earnings - Server-only tracking
    match /platform-earnings/{document=**} {
      allow read: if false; // Only admin via admin SDK
      allow write: if false;
    }

    // Withdrawals - User can read/write their own
    match /withdrawals/{withdrawalId} {
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
      allow read: if isAuth() && 
      (request.auth.uid == resource.data.userId || 
      request.auth.uid == resource.data.approvedBy);
      allow update: if false; // Only server-side updates
      allow delete: if false;
    }
  }
}
